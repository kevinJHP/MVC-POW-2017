       <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.hojavidaID)

        <div class="form-group">
            @Html.LabelFor(model => model.institucion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.institucion)
                @Html.ValidationMessageFor(model => model.institucion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.puesto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.puesto)
                @Html.ValidationMessageFor(model => model.puesto)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fechaini, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechaini)
                @Html.ValidationMessageFor(model => model.fechaini)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fechafin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechafin)
                @Html.ValidationMessageFor(model => model.fechafin)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
